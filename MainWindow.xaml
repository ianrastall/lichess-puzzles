<Window x:Class="Lichess_Puzzles.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:Lichess_Puzzles"
mc:Ignorable="d"
Title="Lichess Puzzles" Height="720" Width="1300" WindowState="Maximized" MinWidth="1200" MinHeight="750"
Icon="pack://application:,,,/AppIcon.ico"
Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Options & Notices (left column) -->
        <StackPanel Grid.Column="0">
            <!-- Puzzle Header -->
            <StackPanel Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Profile:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="UserCombo" Width="170" SelectionChanged="UserCombo_SelectionChanged"/>
                    <Button x:Name="BtnAddUser" Content="New" Width="60" Margin="8,0,0,0" Click="BtnAddUser_Click"/>
                </StackPanel>
                <TextBlock Text="Puzzle" FontSize="28" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Rating: " Foreground="{DynamicResource SecondaryTextBrush}" FontSize="14"/>
                    <TextBlock x:Name="PuzzleRatingText" Text="-" FontWeight="SemiBold" FontSize="16"/>
                    <TextBlock Text=" | " Foreground="{DynamicResource SecondaryTextBrush}" FontSize="14"/>
                    <TextBlock x:Name="PuzzleIdText" Text="" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Status Message -->
            <Border x:Name="StatusBorder" Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" 
                    Padding="12,8" Margin="0,0,0,15">
                <TextBlock x:Name="StatusText" Text="Find the best move!" FontSize="15" TextWrapping="Wrap"/>
            </Border>

            <!-- Themes -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Themes" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <TextBlock Text="Click a theme to add or remove it from the active filters for upcoming puzzles." 
                           FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                <ItemsControl x:Name="ThemesControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Tag="{Binding}" Click="ThemeTag_Click" Cursor="Hand"
                                    Background="{DynamicResource PrimaryBrush}"
                                    BorderThickness="0"
                                    Padding="10,4"
                                    Margin="0,0,5,5"
                                    Foreground="{DynamicResource TextBrush}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                    <TextBlock Text="{Binding DisplayName}" FontSize="14"/>
                                </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Active filters" FontSize="15" FontWeight="SemiBold" Margin="4,10,0,6"/>
                <ItemsControl x:Name="ActiveThemeFiltersControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1" CornerRadius="4" Padding="8,4" Margin="0,0,5,5">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" FontSize="14" Margin="0,0,6,0"/>
                                    <Button Content="x" Tag="{Binding ThemeId}" 
                                            Click="RemoveThemeFilter_Click"
                                            Padding="4,0"
                                            MinWidth="20"
                                            Height="20"
                                            Background="{DynamicResource PrimaryBrush}"
                                            BorderThickness="0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="ActiveFiltersPlaceholder" Text="No filters applied"
                           Foreground="{DynamicResource SecondaryTextBrush}" FontSize="13" Margin="0,2,0,0"/>

                <CheckBox x:Name="SkipMateThemesCheckbox" Content="Skip mate puzzles"
                          Margin="0,10,0,0"
                          FontSize="14"
                          Checked="SkipMateThemesCheckbox_Changed"
                          Unchecked="SkipMateThemesCheckbox_Changed"/>
            </StackPanel>

            <!-- Controls -->
            <StackPanel Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnHint" Content="Hint" Click="BtnHint_Click" Margin="0,0,12,0" Width="100" FontSize="14"/>
                    <Button x:Name="BtnRetry" Content="Retry" Click="BtnRetry_Click" Margin="0,0,12,0" Width="100" FontSize="14"/>
                    <Button x:Name="BtnNext" Content="Next >" Click="BtnNext_Click" Width="100" FontSize="14"/>
                </StackPanel>
                
                <!-- Rating Filter -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="Rating:" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="14"/>
                    <TextBox x:Name="MinRatingBox" Width="80" Text="800" VerticalAlignment="Center" FontSize="14"/>
                    <TextBlock Text=" - " VerticalAlignment="Center" FontSize="14"/>
                    <TextBox x:Name="MaxRatingBox" Width="80" Text="1500" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
                
                <!-- Database refresh -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button x:Name="BtnRefreshDb" Content="Update Puzzle Database" Click="BtnRefreshDb_Click" 
                            Padding="16,8" FontSize="13" Margin="0,0,12,0"/>
                    <Button x:Name="BtnOptions" Content="Options" Click="BtnOptions_Click" Padding="16,8" FontSize="13"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Chess Board Section (center column) -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- File Labels (top) -->
            <UniformGrid x:Name="FileLabelsTop" Grid.Row="0" Rows="1" Columns="8" Margin="25,0,0,2">
                <TextBlock Text="a" HorizontalAlignment="Center" FontSize="15"/>
                <TextBlock Text="b" HorizontalAlignment="Center" FontSize="15"/>
                <TextBlock Text="c" HorizontalAlignment="Center" FontSize="15"/>
                <TextBlock Text="d" HorizontalAlignment="Center" FontSize="15"/>
                <TextBlock Text="e" HorizontalAlignment="Center" FontSize="15"/>
                <TextBlock Text="f" HorizontalAlignment="Center" FontSize="15"/>
                <TextBlock Text="g" HorizontalAlignment="Center" FontSize="15"/>
                <TextBlock Text="h" HorizontalAlignment="Center" FontSize="15"/>
            </UniformGrid>

            <!-- Board with Rank Labels -->
            <Grid Grid.Row="1" x:Name="BoardArea">
                <Viewbox Stretch="Uniform" StretchDirection="Both">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- Rank Labels -->
                        <UniformGrid x:Name="RankLabels" Grid.Column="0" Rows="8" Columns="1" Margin="0,0,8,0">
                            <TextBlock Text="8" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="7" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="6" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="5" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="4" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="3" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="2" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="1" VerticalAlignment="Center" FontSize="16"/>
                        </UniformGrid>

                        <!-- Chess Board -->
                        <Border Grid.Column="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2">
                            <Grid Width="640" Height="640">
                                <UniformGrid x:Name="ChessBoardGrid" Rows="8" Columns="8"/>
                                <Canvas x:Name="DragCanvas"
                                        Width="{Binding ActualWidth, ElementName=ChessBoardGrid}"
                                        Height="{Binding ActualHeight, ElementName=ChessBoardGrid}"
                                        IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Viewbox>
            </Grid>

            <!-- Player to move indicator -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="25,12,0,0">
                <Border x:Name="PlayerIndicator" Width="20" Height="20" CornerRadius="10" 
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,8,0"/>
                <TextBlock x:Name="PlayerToMoveText" Text="White to move" VerticalAlignment="Center" FontSize="15"/>
            </StackPanel>
        </Grid>

        <!-- Move List (right column) -->
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Profile rating -->
            <StackPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="Profile rating" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="13"/>
                <TextBlock x:Name="UserRatingText" Text="Rating: -" FontSize="18" FontWeight="SemiBold" />
            </StackPanel>
            
            <!-- Puzzle Moves Section -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Puzzle Moves" FontSize="17" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Border Background="{DynamicResource SurfaceBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4"
                        Padding="8">
                    <ItemsControl x:Name="PuzzleMoveListControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding MoveNumberDisplay}" 
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               FontWeight="Bold" Margin="0,0,3,0" FontSize="14"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding ShowMoveNumber, Converter={StaticResource BoolToVisibility}}"/>
                                    <Button Content="{Binding San}" 
                                            Tag="{Binding Index}"
                                            Click="PuzzleMoveButton_Click"
                                            FontFamily="Consolas"
                                            Margin="0,3,8,3"
                                            Padding="6,3"
                                            MinWidth="0"
                                            Background="{Binding Background}"
                                            BorderThickness="0"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="3" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </StackPanel>
            
            <!-- Game Moves Section -->
            <StackPanel x:Name="GameMovesHeader" Grid.Row="2" Margin="0,0,0,5" Visibility="Collapsed">
                <DockPanel Margin="0,0,0,8">
                    <TextBlock Text="Source Game" FontSize="17" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button x:Name="BtnCopyPgn" Content="Copy PGN" Click="BtnCopyPgn_Click" 
                            HorizontalAlignment="Right" Padding="10,4" FontSize="13"/>
                </DockPanel>
                <!-- Game metadata -->
                <StackPanel x:Name="GameMetadataPanel" Margin="0,0,0,8">
                    <TextBlock x:Name="GamePlayersText" FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"/>
                    <TextBlock x:Name="GameOpeningText" FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap"/>
                    <TextBlock x:Name="GameResultText" FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </StackPanel>
            <Border x:Name="GameMovesBorder" Grid.Row="3" Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4"
                    Padding="8" Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="GameMoveListScrollViewer"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="GameMoveListControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Move number (only for white moves or first black move) -->
                                    <TextBlock Text="{Binding MoveNumberDisplay}" 
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               FontWeight="Bold" Margin="0,0,3,0" FontSize="14"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding ShowMoveNumber, Converter={StaticResource BoolToVisibility}}"/>
                                    <!-- Move button -->
                                    <Button Content="{Binding San}" 
                                            Tag="{Binding Index}"
                                            Click="GameMoveButton_Click"
                                            FontFamily="Consolas"
                                            Margin="0,3,8,3"
                                            Padding="6,3"
                                            MinWidth="0"
                                            Background="{Binding Background}"
                                            BorderThickness="0"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="3" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <!-- Comment/annotation after move -->
                                    <TextBlock Text="{Binding Comment}" 
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               FontStyle="Italic" Margin="0,0,8,0" FontSize="13"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding HasComment, Converter={StaticResource BoolToVisibility}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
